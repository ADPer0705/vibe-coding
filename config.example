# Submodule Update Configuration
# Copy this to .env and set your values

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
REPO_OWNER=ADPer0705
REPO_NAME=vibe-coding

# Update Settings
AUTO_PUSH=false
VERBOSE=false

# Scheduling (for manual cron setup)
